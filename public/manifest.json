{
    "manifest_version": 2,
    "name": "BOTTO",
    "description": "Focus on the task by reducing visual noise.",
    "version": "1.0.0",
    "background": {
      "scripts": [
        "content.js"
      ],
      "persistent": true
    },
    "options_page": "index.html",
    "permissions": [
      "tabs",
      "storage"
    ],
    "icons": {
      "16":  "BOTTO_icon18.png",
      "48":  "BOTTO_icon48.png",
      "128": "BOTTO_icon128.png"
    }
  }